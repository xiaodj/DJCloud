<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djweb.dao.IDeviceDAO">
    <!-- 添加设备 -->
    <insert id="insert" parameterType="com.djweb.entity.DeviceEntity">
        INSERT INTO TBL_DEVICE(DEVNAME, DEVUNINUM, DATASECRECY, PID)
        VALUES(#{DEVNAME}, #{DEVUNINUM}, #{DATASECRECY},#{PID});
    </insert>
    <!-- 更新设备信息 -->
    <update id="update" parameterType="com.djweb.entity.UserEntity">
        UPDATE TBL_DEVICE SET DEVNAME = #{DEVNAME}, DEVUNINUM = #{DEVUNINUM}, DATASECRECY = #{DATASECRECY},
         DEVICONPATH = #{DEVICONPATH}, DEVDESC = #{DEVDESC}, DEVLABEL = #{DEVLABEL}, DEVADDRESS = #{DEVADDRESS}
          WHERE DID = #{DID};
    </update>
    <!-- 根据设备名称获取设备信息 -->
    <select id="selectByDevName" resultType="com.djweb.entity.DeviceEntity">
        SELECT * FROM TBL_DEVICE WHERE DEVNAME = #{devname};
    </select>
    <!-- 根据设备编码获取设备信息 -->
    <select id="selectByDID" resultType="com.djweb.entity.DeviceEntity">
        SELECT * FROM TBL_DEVICE WHERE DID = #{did};
    </select>
    <!-- 根据产品编码查询设备信息 -->
    <select id="selectByPID" resultType="com.djweb.entity.DeviceEntity">
        SELECT * FROM TBL_DEVICE WHERE PID = #{pid};
    </select>
    <!-- 根据设备ID删除设备 -->
    <delete id="deleteByDID">
        DELETE FROM TBL_DEVICE WHERE DID = #{did};
    </delete>
</mapper>