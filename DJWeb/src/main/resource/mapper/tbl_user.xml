<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djweb.dao.IUserDAO">
    <!-- 添加用户 -->
    <insert id="insert" parameterType="com.djweb.entity.UserEntity">
        INSERT INTO djc_user(MOBILE, PASSWORD, USERNAME, SEX, BIRTHDAY, ORGANIZATION, INTRODUCE,
        LOCATION, ADDRESS, EMAIL, QQ)
        VALUES(#{MOBILE}, #{PASSWORD}, #{USERNAME},#{SEX}, #{BIRTHDAY}, #{ORGANIZATION},
         #{INTRODUCE}, #{LOCATION},#{ADDRESS}, #{EMAIL}, #{QQ});
    </insert>

    <!-- 根据用户名删除用户 -->
    <delete id="deleteByName">
        DELETE FROM djc_user WHERE USERNAME = #{USERNAME};
    </delete>
    <!-- 根据用户ID删除用户 -->
    <delete id="deleteByUID">
        DELETE FROM djc_user WHERE UID = #{UID};
    </delete>

    <!--<update id="update" parameterType="com.djweb.entity.UserEntity">
        UPDATE djc_user SET PASSWORD = #{PASSWORD} WHERE USERNAME = #{USERNAME};
    </update>-->

    <!-- 根据用户名查询用户信息 -->
    <select id="selectByName" resultType="com.djweb.entity.UserEntity">
        SELECT * FROM djc_user WHERE USERNAME = #{USERNAME};
    </select>
    <!-- 根据用户ID查询用户信息 -->
    <select id="selectByUID" resultType="com.djweb.entity.UserEntity">
        SELECT * FROM djc_user WHERE UID = #{UID};
    </select>
</mapper>