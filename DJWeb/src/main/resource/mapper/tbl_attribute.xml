<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djweb.dao.IAttributeDAO">
    <!-- 添加属性点 -->
    <insert id="insert" parameterType="com.djweb.entity.UserEntity">
        INSERT INTO TBL_ATTRIBUTE(ATTRNAME, UNITNAME, UNITSYMBOL, PID)
        VALUES(#{ATTRNAME}, #{UNITNAME}, #{UNITSYMBOL}, #{PID});
    </insert>
    <!-- 更新属性信息 -->
    <update id="update" parameterType="com.djweb.entity.UserEntity">
        UPDATE TBL_ATTRIBUTE SET ATTRNAME = #{ATTRNAME}, UNITNAME = #{UNITNAME},
         UNITSYMBOL = #{UNITSYMBOL} WHERE AID = #{AID};
    </update>
    <!-- 根据属性名称获取属性信息 -->
    <select id="selectByAttrName" resultType="com.djweb.entity.AttributeEntity">
        SELECT * FROM TBL_ATTRIBUTE WHERE ATTRNAME = #{attrname};
    </select>
    <!-- 根据属性编码获取属性信息 -->
    <select id="selectByAID" resultType="com.djweb.entity.AttributeEntity">
        SELECT * FROM TBL_ATTRIBUTE WHERE AID = #{aid};
    </select>
    <!-- 根据产品编码获取属性信息 -->
    <select id="selectByPID" resultType="com.djweb.entity.AttributeEntity">
        SELECT * FROM TBL_ATTRIBUTE WHERE PID = #{pid};
    </select>
    <!-- 根据属性编码删除属性 -->
    <delete id="deleteByAID">
        DELETE FROM TBL_ATTRIBUTE WHERE AID = #{aid};
    </delete>
</mapper>